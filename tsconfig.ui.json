{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "noEmit": false
  },
  "include": [
    "src/ui/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/plugin/**/*",
    "node_modules",
    "dist"
  ]
}