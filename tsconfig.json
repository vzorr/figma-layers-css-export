{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  },
  "include": [
    "code.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}